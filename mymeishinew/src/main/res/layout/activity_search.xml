<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="commeishi.shanjing.mymeishi.activity.SearchActivity">
<include
    layout="@layout/include_title_name"
    >

</include>
    <EditText
        android:id="@+id/searet_suo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/map_incliue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:hint="输入搜索的地点"
        android:textColor="@color/black"
        />
    <ListView

        android:id="@+id/list_searchss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>
</LinearLayout>