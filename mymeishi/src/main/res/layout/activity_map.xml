<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MapActivity">
    <include
        android:id="@+id/map_incliue"
        layout="@layout/include_title_name"
        >
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/list_aroundPoi"
        android:layout_below="@+id/map_incliue">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mymap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">
        </com.baidu.mapapi.map.MapView>
        <ImageView
            android:id="@+id/im_biaozhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biaozhi"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/searet_suo"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/map_incliue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:hint="输入搜索的地点"
        android:textColor="@color/black"
        />

    <ListView
        android:id="@+id/list_aroundPoi"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>

</RelativeLayout>