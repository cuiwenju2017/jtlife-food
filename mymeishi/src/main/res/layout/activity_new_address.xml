<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwaite"
    tools:context=".activity.NewAddressActivity">
  <include
      android:id="@+id/newaddinclude"
      layout="@layout/include_title_name"
      >

  </include>
    <RelativeLayout

        android:layout_below="@+id/newaddinclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">



                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/receiveName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/receiveTel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fa_color"
                        android:text="默认地址"
                        />
                </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/sysAreaName"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:text="默认地址"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"

                            />
                        <TextView
                            android:id="@+id/addressDetail"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:text="默认地址"

                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/bianji"
                           />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编辑"
                            />
                      <View
                          android:layout_marginLeft="15dp"
                          android:layout_width="1dp"
                          android:layout_height="20dp"
                          android:background="@color/black"
                          >
                      </View>
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/delete"
                            />
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="删除"
                            />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>




    </RelativeLayout>




    <RelativeLayout

        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/getnewaddress_but"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加新地址"
            android:textColor="@color/colorwaite"
            />
    </RelativeLayout>
</RelativeLayout>