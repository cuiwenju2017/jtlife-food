<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorwaite"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GetAddressActivity">
    <include
        layout="@layout/include_title_name"
        >

    </include>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="所在地区:   "
            android:textSize="15dp"
            android:textColor="@color/black"
             />

        <TextView
            android:id="@+id/suozaidiqu"
            android:background="@color/colorwaite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="选择地区"
            android:padding="3dp"
            android:textColor="@color/black"
        />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="详细地址:   "
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:background="@color/colorwaite"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="请输入详细地址"
            android:padding="3dp"

            android:textColor="@color/black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="姓名:   "
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:background="@color/colorwaite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="请输入你的姓名"
            android:padding="3dp"

            android:textColor="@color/black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机号码:   "
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:background="@color/colorwaite"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="请输入手机号码"
            android:padding="3dp"

            android:textColor="@color/black"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <CheckBox
            android:id="@+id/checkaddress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bejingxuanzhong"
            android:button="@null"
            android:checked="false" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置为默认地址"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        >
    </View>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

           android:gravity="center"
            android:layout_width="200dp"
            android:textColor="@color/fa_color"
            android:background="@drawable/yuanjia"
            android:layout_height="40dp"
            android:text="新增"

            />

    </LinearLayout>


</LinearLayout>